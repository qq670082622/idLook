#import "OrderCustomCell.h"

@interface OrderCustomCell ()

@end

@implementation OrderCustomCell

-(id)initWithStyle:(UITableViewCellStyle)style reuseIdentifier:(NSString *)reuseIdentifier
{
    if (self=[super initWithStyle:style reuseIdentifier:reuseIdentifier]) {
        
        [self centerV];
    }
    return self;
}

-(UIView*)centerV
{
    if (!_centerV) {
        _centerV=[[UIView alloc]init];
        [self.contentView addSubview:_centerV];
        _centerV.layer.borderColor=[UIColor colorWithHexString:@"#F7F7F7"].CGColor;
        _centerV.layer.borderWidth=0.5;
        [_centerV mas_makeConstraints:^(MASConstraintMaker *make) {
            make.left.mas_equalTo(self.contentView);
            make.right.mas_equalTo(self.contentView);
            make.top.mas_equalTo(self.contentView).offset(40);
            make.bottom.mas_equalTo(self.contentView).offset(-40);
        }];
    }
    return _centerV;
}

-(UILabel*)orderTimeLab
{
    if (!_orderTimeLab) {
        _orderTimeLab=[[UILabel alloc]init];
        [self.contentView addSubview:_orderTimeLab];
        _orderTimeLab.font=[UIFont systemFontOfSize:12.0];
        _orderTimeLab.textColor=[UIColor colorWithHexString:@"#999999"];
        [_orderTimeLab mas_makeConstraints:^(MASConstraintMaker *make) {
            make.left.mas_equalTo(self.contentView).offset(15);
            make.centerY.mas_equalTo(self.contentView.mas_top).offset(20);
        }];
    }
    return _orderTimeLab;
}

-(UILabel*)orderStateLab
{
    if (!_orderStateLab) {
        _orderStateLab=[[UILabel alloc]init];
        [self.contentView addSubview:_orderStateLab];
        _orderStateLab.font=[UIFont systemFontOfSize:13.0];
        _orderStateLab.textColor=Public_Red_Color;
        [_orderStateLab mas_makeConstraints:^(MASConstraintMaker *make) {
            make.right.mas_equalTo(self.contentView).offset(-15);
            make.centerY.mas_equalTo(self.contentView.mas_top).offset(20);
        }];
    }
    return _orderStateLab;
}

@end
