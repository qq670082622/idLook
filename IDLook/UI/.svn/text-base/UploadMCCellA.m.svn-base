#import "UploadMCCellA.h"


@interface UploadMCCellA ()

@end

@implementation UploadMCCellA

-(id)initWithStyle:(UITableViewCellStyle)style reuseIdentifier:(NSString *)reuseIdentifier
{
    if (self=[super initWithStyle:style reuseIdentifier:reuseIdentifier]) {
        self.contentView.layer.borderColor=Public_LineGray_Color.CGColor;
        self.contentView.layer.borderWidth=0.5;
    }
    return self;
}

-(AddSubButton*)modelcardBtn
{
    if (!_modelcardBtn) {
        _modelcardBtn=[[AddSubButton alloc]init];
        [self.contentView addSubview:_modelcardBtn];
        [_modelcardBtn mas_makeConstraints:^(MASConstraintMaker *make) {
            make.top.mas_equalTo(self.contentView).offset(40);
            make.centerX.mas_equalTo(self.contentView);
            make.size.mas_equalTo(CGSizeMake(UI_SCREEN_WIDTH-110, 134));
        }];
        WeakSelf(self);
        _modelcardBtn.addAction = ^{
            [weakself clickWithType:0];
        };
    }
    return _modelcardBtn;
}

-(AddSubButton*)interoduceBtn
{
    if (!_interoduceBtn) {
        _interoduceBtn=[[AddSubButton alloc]init];
        [self.contentView addSubview:_interoduceBtn];
        [_interoduceBtn mas_makeConstraints:^(MASConstraintMaker *make) {
            make.top.mas_equalTo(self.modelcardBtn.mas_bottom).offset(30);
            make.centerX.mas_equalTo(self.contentView);
            make.size.mas_equalTo(CGSizeMake(UI_SCREEN_WIDTH-110, 134));
        }];
        WeakSelf(self);
        _interoduceBtn.addAction = ^{
            [weakself clickWithType:1];
        };
        
    }
    return _interoduceBtn;
}

-(void)reloadUI
{
    self.modelcardBtn.title=@"添加模特卡";
    self.modelcardBtn.imageN=@"works_photo_icon";
    
    self.interoduceBtn.title=@"添加自我介绍";
    self.interoduceBtn.imageN=@"works_video_icon";
}

-(void)clickWithType:(NSInteger)type
{
    self.uploadmodelcardWithType(type);
}

@end
