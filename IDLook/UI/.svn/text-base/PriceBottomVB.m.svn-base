#import "PriceBottomVB.h"

@interface PriceBottomVB ()
@property(nonatomic,strong)UILabel *titleLab;   //标题
@property(nonatomic,strong)UILabel *priceLab;     //价格
@property(nonatomic,strong)UILabel *descLab;
@property(nonatomic,strong)UILabel *submitLab;
@end

@implementation PriceBottomVB

-(id)init
{
    if (self=[super init]) {
        self.backgroundColor=[UIColor whiteColor];
        [self initUI];
    }
    return self;
}

-(void)initUI
{
    UIView *submitV=[[UIView alloc]init];
    [self addSubview:submitV];
    submitV.userInteractionEnabled=YES;
    submitV.backgroundColor=Public_Red_Color;
    [submitV mas_makeConstraints:^(MASConstraintMaker *make) {
        make.right.mas_equalTo(self);
        make.top.mas_equalTo(self);
        make.bottom.mas_equalTo(self);
        make.width.mas_equalTo(110);
    }];
    UITapGestureRecognizer *tap = [[UITapGestureRecognizer alloc]initWithTarget:self action:@selector(placeOrderAction)];
    [submitV addGestureRecognizer:tap];
    
    UILabel *submitLab1 = [[UILabel alloc] init];
    submitLab1.font = [UIFont systemFontOfSize:15.0];
    submitLab1.textColor = [UIColor whiteColor];
    submitLab1.text=@"提交订单";
    [submitV addSubview:submitLab1];
    [submitLab1 mas_makeConstraints:^(MASConstraintMaker *make) {
        make.centerX.equalTo(submitV);
        make.top.mas_equalTo(self).offset(17);
    }];
    
    UILabel *submitLab2 = [[UILabel alloc] init];
    submitLab2.font = [UIFont systemFontOfSize:9];
    submitLab2.textColor = [UIColor whiteColor];
    [submitV addSubview:submitLab2];
    [submitLab2 mas_makeConstraints:^(MASConstraintMaker *make) {
        make.centerX.equalTo(submitV);
        make.top.mas_equalTo(submitLab1.mas_bottom).offset(3);
    }];
    self.submitLab=submitLab2;
    
    
    UILabel *lab1 = [[UILabel alloc] init];
    lab1.font = [UIFont systemFontOfSize:13.0];
    lab1.textColor = Public_Text_Color;
    [self addSubview:lab1];
    [lab1 mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(self).offset(15);
        make.top.mas_equalTo(self).offset(14);
    }];
    self.titleLab=lab1;
    
    UILabel *priceLab = [[UILabel alloc] init];
    priceLab.font = [UIFont boldSystemFontOfSize:18.0];
    priceLab.textColor = Public_Red_Color;
    [self addSubview:priceLab];
    [priceLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(lab1.mas_right).offset(5);
        make.centerY.mas_equalTo(lab1);
    }];
    self.priceLab=priceLab;
    
    UILabel *descLab = [[UILabel alloc] init];
    descLab.font = [UIFont systemFontOfSize:10.0];
    descLab.textColor = Public_Text_Color;
    descLab.text=@"(在线支付)";
    [self addSubview:descLab];
    [descLab mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(priceLab.mas_right).offset(5);
        make.centerY.mas_equalTo(lab1);
    }];
    
    UIButton *placeDetailBtn = [UIButton buttonWithType:UIButtonTypeCustom];
    [self addSubview:placeDetailBtn];
    [placeDetailBtn setTitle:@"价格明细" forState:UIControlStateNormal];
    [placeDetailBtn setTitleColor:[UIColor colorWithHexString:@"#75CAFF"] forState:UIControlStateNormal];
    placeDetailBtn.titleLabel.font=[UIFont systemFontOfSize:12.0];
    [placeDetailBtn mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.mas_equalTo(descLab.mas_right).offset(10);
        make.centerY.mas_equalTo(lab1);
        make.width.mas_equalTo(80);
    }];
    
    [placeDetailBtn addTarget:self action:@selector(placeDetailBtnAction) forControlEvents:UIControlEventTouchUpInside];
    
    UILabel *lab2 = [[UILabel alloc] init];
    lab2.font = [UIFont systemFontOfSize:10.0];
    lab2.textColor = Public_Text_Color;
    [self addSubview:lab2];
    [lab2 mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(self).offset(15);
        make.bottom.mas_equalTo(self).offset(-14);
    }];
    self.descLab=lab2;
}

//下单
-(void)placeOrderAction
{
    self.placeOrderBlock();
}

//价格明细
-(void)placeDetailBtnAction
{
    self.praceDetailBlock();
}

-(void)reloadUIWithModel:(OrderStructM *)model withTotalPrice:(NSString *)total withType:(NSInteger)type
{

    self.titleLab.text=model.content;
    self.submitLab.text=[NSString stringWithFormat:@"并支付%@",model.content];
    
    self.priceLab.text=[NSString stringWithFormat:@"¥%ld",[model.price integerValue]];
    
    NSInteger result ;
    if (type==0) {
        result = [total integerValue];
    }
    else
    {
        result = [total integerValue]-[model.price integerValue];
        if (result<=0) {
            result=0;
        }
    }
    
    NSString *str1 = [NSString stringWithFormat:@"  ¥%ld",result];
    NSString *str = [NSString stringWithFormat:@"演出费%@（拍摄前支付）",str1];
    NSMutableAttributedString * attStr = [[NSMutableAttributedString alloc] initWithString:str];
    [attStr addAttributes:@{NSForegroundColorAttributeName:Public_Red_Color} range:NSMakeRange(3,str1.length)];
    self.descLab.attributedText=attStr;
}

@end
