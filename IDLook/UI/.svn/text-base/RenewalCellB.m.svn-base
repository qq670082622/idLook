#import "RenewalCellB.h"

@interface RenewalCellB ()
@property(nonatomic,strong)UILabel *desc1;

@end

@implementation RenewalCellB

-(UILabel*)desc1
{
    if (!_desc1) {
        _desc1=[[UILabel alloc]init];
        [self.contentView addSubview:_desc1];
        _desc1.font=[UIFont systemFontOfSize:14.0];
        _desc1.textColor=[UIColor colorWithHexString:@"#666666"];
        [_desc1 mas_makeConstraints:^(MASConstraintMaker *make) {
            make.left.mas_equalTo(self.contentView).offset(15);
            make.top.mas_equalTo(self.contentView).offset(15);
        }];
    }
    return _desc1;
}

-(AddSubButton*)addVideoBtn
{
    if (!_addVideoBtn) {
        _addVideoBtn=[[AddSubButton alloc]init];
        [self.contentView addSubview:_addVideoBtn];
        [_addVideoBtn mas_makeConstraints:^(MASConstraintMaker *make) {
            make.bottom.mas_equalTo(self.contentView).offset(-30);
            make.centerX.mas_equalTo(self.contentView);
            make.size.mas_equalTo(CGSizeMake(UI_SCREEN_WIDTH-30, 134));
        }];
        WeakSelf(self);
        _addVideoBtn.addAction = ^{
            weakself.addVideoBlock();
        };
    }
    return _addVideoBtn;
}

-(void)reloadUI
{
    self.desc1.text=@"手持牛奶摆出剪刀手姿势";
    
    self.addVideoBtn.title=@"上传原视频";
    self.addVideoBtn.imageN=@"works_video_icon";

}

@end
